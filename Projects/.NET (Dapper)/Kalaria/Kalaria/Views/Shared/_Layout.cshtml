<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kalaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light shadow pb-3">
            <div class="container-fluid ">
                <div class="row w-100">
                    <div class="col-12 col-lg-3 d-flex justify-content-lg-start justify-content-center">
                        <a asp-controller="Home" asp-action="Index" class="text-center">
                            <img src="/images/logos/nav-logo.png" class="w-75">
                        </a>
                    </div>
                    <div class="col-12 col-lg-9 d-flex justify-content-lg-end justify-content-center">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav col d-flex justify-content-around">
                              
                                <li class="nav-item ">
                                    <a asp-controller="TheAcademy" asp-action="Index" class="nav-link fs-6  text-white">LA ACADEMIA</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Entertainment" asp-action="Index" class="nav-link fs-6 text-white">ANIMACIÓN INFANTIL</a>
                                </li>
                                <li class="nav-item text-center">
                                    <a asp-controller="Home" asp-action="About" class="nav-link fs-6  text-white">¿QUIÉNES SOMOS?</a>
                                </li>
                                <li class="nav-item text-center">
                                    <a asp-area="" asp-controller="Home" asp-action="Work" class="nav-link fs-6 text-white">TRABAJA CON NOSOTROS</a>
                                </li>>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
   

    <div class="container-fluid p-0">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-lg-start  mt-5">
        <div class="container text-center text-md-start ">
            <div class="row d-flex justify-content-center">
                <img src="/images/logos/footer-logo.png" class="w-25 mt-5" />
            </div>
            <div class="row">
                <div class="col-6 mx-auto mb-4">
                    <ul class="mt-5 text-center">
                        <li class="mb-3">
                            <a asp-controller="TheAcademy" asp-action="Index" class="footer-link text-white text-decoration-none">La Academia</a>
                        </li>
                        <li>
                            <a asp-controller="Entertainment" asp-action="Index" class="footer-link text-white text-decoration-none">Animación Infantil</a>
                        </li>
                    </ul>
                </div>
                <div class="col-6 mx-auto mb-4">
                    <ul class="mt-5 text-center">
                        <li class="mb-3" >
                            <a asp-controller="Home" asp-action="About" class="footer-link text-white text-decoration-none">¿Quiénes somos?</a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Work" class="footer-link text-white text-decoration-none">Trabaja con nosotros</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Section: Links  -->
        <section class="d-flex justify-content-center p-4 border-bottom">
            <div class="text-center">
                <a href="" class="mx-2 text-reset">
                    <i class="fab fa-facebook-f text-white"></i>
                </a>
                <a href="" class="mx-2 text-reset">
                    <i class="fab fa-twitter text-white"></i>
                </a>
                <a href="" class="mx-2 text-reset">
                    <i class="fab fa-instagram text-white"></i>
                </a>
            </div>
        </section>
        <div class="text-center p-4 text-white">
            © 2024 Copyright |
            <a class="text-reset fw-bold " href="#">Kalaria.com</a>
        </div>


        <!-- Copyright -->
    </footer>
    <!-- Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/c049642920.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
