    <div class="container-fluid p-0">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start pt-2  " >
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <div class="row mt-3">
                
                    <div class="col mx-auto mb-4 text-center">
                        <div class="px-5">
                            <a class="nav-link text-white mx-3" asp-area="" asp-controller="TheAcademy" asp-action="Index">La academia</a>
                        </div>
                        <div class="px-5">
                            <a class="nav-link text-white mx-3" asp-area="" asp-controller="Entertainment" asp-action="Index">Animación Infantil</a>
                        </div>
                        <div class="px-5">
                            <a class="nav-link text-white mx-3" asp-area="" asp-controller="Home" asp-action="About">¿Quiénes somos?</a>
                        </div>
                        <div class="px-5">
                            <a class="nav-link text-white mx-3" asp-area="" asp-controller="Home" asp-action="Work">Trabaja con nosotros</a>
                        </div>
                     
                        
                    </div>
                    <div class="col mx-auto mb-4 text-center">
                        <div class="px-5">
                            <a class="fas fa-home me-3 nav-link text-white mx-3" asp-area="" asp-controller="Home" asp-action="Index">Algun Lugar, CP 36320, ES</a>
                        </div>
                        <div class="px-5">
